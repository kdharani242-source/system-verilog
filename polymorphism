class remote;
  virtual function void presspower();
    $display("default: no device is selected");
  endfunction
endclass
class fan extends remote;
  function void presspower();
    $display("fan is on / off");
  endfunction 
endclass
class ac extends remote;
  function void presspower();
    $display("ac is on / off");
  endfunction 
endclass
class light extends remote;
  function void presspower();
    $display("light is on / off");
  endfunction 
endclass
module tb;
  remote device[3];
  initial
    begin
      device[0]=fan::new();
      device[1]=ac::new();
      device[2]=light::new();
      foreach(device[i]) 
        device[i].presspower;
    end
endmodule
//output
# KERNEL: fan is on / off
# KERNEL: ac is on / off
# KERNEL: light is on / off
