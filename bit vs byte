1)module tb;
  bit [7:0] a;
  byte b;
  initial
    begin
      a=50;
      b=50;
      $display("a=%0d b=%0d",a,b);
    end
endmodule
//output
# KERNEL: a=50 b=50

2)
module tb;
  bit [7:0] a;
  byte b;
  initial
    begin
      a=-50;
      b=-50;
      $display("a=%0d b=%0d",a,b);
    end
endmodule
//output
# KERNEL: a=206 b=-50
